<script>
  const simBtn = document.getElementById('sim');
  const container = document.querySelector('.buttons');

  simBtn.addEventListener('click', () => {
    // Container width and height to limit button movement
    const containerRect = container.getBoundingClientRect();
    const btnRect = simBtn.getBoundingClientRect();

    // Calculate max position offsets within container so button is fully visible
    const maxLeft = container.clientWidth - simBtn.offsetWidth;
    const maxTop = container.clientHeight - simBtn.offsetHeight;

    // Random left and top values inside container boundaries
    const left = Math.floor(Math.random() * maxLeft);
    const top = Math.floor(Math.random() * maxTop);

    // Apply new position to button (relative to container)
    simBtn.style.left = `${left}px`;
    simBtn.style.top = `${top}px`;
    simBtn.style.transform = 'translate(0, 0)'; // reset transform translateY for new top setting
  });
</script>
